{
  "manifest_version": 3,
  "name": "Zipline Upload",
  "version": "1.0.0",
  "description": "Adds 'Upload to Zipline' button to image, video, audio and text selection context menu.",
  "author": "Stef",
  "homepage_url": "https://zipline.diced.sh",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_popup": "popups/settings.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*", "icons/*", "*"],
      "matches": ["*://*/*"]
    }
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}